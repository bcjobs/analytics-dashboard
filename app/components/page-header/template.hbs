<div class="header">
  <div class="global-fullwidth">
    <div class="header-byline">Alpha version: for internal viewing purposes only</div>
    <img src="images/logo-bctechjobs.png" alt="BC Tech Jobs Logo"/>
  </div>
</div>
<div class="title-wrapper">
  <div class="title global-fullwidth clearfix">
    <div class="clearfix filter-wrapper margin-b15">
      <div class="col-xs-2 col-sm-1">
        <img src="images/icon-date.svg" width="34" class="date-icon" />
      </div>
      <div class="col-xs-10 col-sm-5 text-right xs-text-center filter-columns">
        {{#unless hideDatepicker}}
          {{bootstrap-datepicker
            class="calendar date-filter"
            orientation="top"
            autoclose=true
            startDate=startsAt
            endDate=endsAt
            value=atDate
          }}
        {{/unless}}
      </div>
      <div class="col-xs-2 col-sm-1">
        <img src="images/icon-filter.svg" width="34" class="date-icon" />
      </div>
      <div class="col-xs-10 col-sm-5 text-left xs-text-center filter-columns">
        <div class="dropdown-filter item-inblock">
          <span class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span>{{currentSector}} <span class="caret"></span></span></a>
            <ul class="dropdown-menu">
              <li>
                {{#link-to  (query-params sector="" subSector="")}}
                  No Sector
                {{/link-to}}
              </li>
              {{#each sectorList as |sector|}}
                <li>
                  {{#link-to  (query-params sector=sector.name subSector="")}}
                    {{sector.name}}
                  {{/link-to}}
                  {{! Display all subSectors in a specific sector }}
                  {{#each sector.subSectors as |subSector|}}
                    {{#link-to  (query-params subSector=subSector.name sector="")}}
                      <span class="dropdown-sublink">{{subSector.name}}</span>
                    {{/link-to}}
                  {{/each}}
                </li>
              {{/each}}
            </ul>
          </span>
        </div>
      </div>
    </div>
    <div class="clearfix title-overview">
      <div class="col-xs-6 text-left">
        <a href="#" {{action "switchReport" type}}>{{switchReportName}}</a>
      </div>
      <div class="col-xs-6 text-right">
        {{#if session.user}}
          {{session.user.firstName}} | <a href="#" {{action "logout"}}>Logout</a>
        {{else}}
          {{#link-to "authentication"}}Login{{/link-to}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
<div class="spinner-container hidden">
  <div class="spinner-base">
    <div class="spinner-loader hidden">
    </div>
  </div>
</div>
