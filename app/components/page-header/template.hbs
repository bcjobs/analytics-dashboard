<div class="header">
  <div class="global-fullwidth">
    <div class="header-byline">Alpha version: for internal viewing purposes only</div>
    <img src="images/logo-bctechjobs.png" alt="BC Tech Jobs Logo"/>
  </div>
</div>
<div class="title-wrapper">
  <div class="title global-fullwidth clearfix">
    <div class="clearfix xs-mb15">
      <div class="col-xs-6 text-right xs-text-center filter-columns">
        {{#unless hideDatepicker}}
          <img src="images/icon-date.svg" width="34" class="date-icon item-inblock margin-r5 xs-m0" />
          <div class="date-filter item-inblock">
            {{bootstrap-datepicker
              class="calendar"
              orientation="top"
              autoclose=true
              startDate=startsAt
              endDate=endsAt
              value=atDate
            }}
          </div>
        {{/unless}}
      </div>
      <div class="col-xs-6 text-left xs-text-center filter-columns">
        <img src="images/icon-filter.svg" width="34" class="date-icon item-inblock margin-r5 xs-m0" />
        <div class="dropdown-filter item-inblock">
          <input class="filter" />
        </div>
      </div>
    </div>
    <div class="clearfix title-overview">
      <div class="pull-left">
        <a href="#" {{action "switchReport" type}}>{{switchReportName}}</a>
      </div>
      <div class="pull-right">
        {{#if session.user}}
          {{session.user.firstName}} | <a href="#" {{action "logout"}}>Logout</a>
        {{else}}
          {{#link-to "authentication"}}Login{{/link-to}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
<div class="spinner-container hidden">
  <div class="spinner-base">
    <div class="spinner-loader hidden">
    </div>
  </div>
</div>
