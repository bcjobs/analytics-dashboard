<div class="form-group">
  <label>Email address
    {{input type="email" class="form-control" value=user.email}}
  </label>
</div>

<div class="form-group">
  <label>First name
    {{input class="form-control" value=user.firstName}}
  </label>
</div>

<div class="form-group">
  <label>Last name
    {{input class="form-control" value=user.lastName}}
  </label>
</div>

<div class="form-group">
  <label>Roles
    {{select-2 value=user.roles content=roleOptions optionValuePath="id" classNames="form-control" multiple=true allow-clear=true}}
  </label>
</div>
