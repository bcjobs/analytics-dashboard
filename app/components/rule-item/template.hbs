<div class="rule">

  <div class="rule-content">
    <div class="row">
      <div class="col-md-1 rule-term-label">
        Terms:
      </div>
      <div class="col-md-5">
        {{#each terms key="@index" as |term|}}
          <div class="form-group">
            <div class="rule-term">
              {{input class="form-control" value=term.value action=(action 'changeTerm' term) on="input"}}
              <span class="pointer glyphicon glyphicon-remove {{unless term.canDelete 'invisible'}}" {{action "removeTerm" term}}></span>
            </div>
          </div>
        {{/each}}
      </div>

      <div class="col-md-6">
        <form class="rule-option form-inline">
          <div class="radio">
            {{#radio-button
              value="replace"
              groupValue=rule.action}}
              Replace with
            {{/radio-button}}
          </div>
          {{input class="form-control" value=rule.replaceWith}}
        </form>
        <form class="rule-option form-inline">
          <div class="radio">
            {{#radio-button
              value="ignoreValue"
              groupValue=rule.action}}
              Ignore value
            {{/radio-button}}
          </div>
        </form>
        <form class="rule-option form-inline">
          <div class="radio">
            {{#radio-button
              value="ignoreJob"
              groupValue=rule.action}}
              Ignore job
            {{/radio-button}}
          </div>

        </form>
      </div>
    </div>
  </div>

  <div class="rule-icon">
    {{#unless rule.isNew}}
      <span class="glyphicon glyphicon-remove"></span>
    {{/unless}}
  </div>
</div>
