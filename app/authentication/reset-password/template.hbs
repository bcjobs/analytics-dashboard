<div class="container admin">
  <div class="page-header">
    <h1>Reset Password</h1>
  </div>

  <form {{action "submit" email password on="submit"}}>
    <div class="form-group">
      <label>
        Email address
        {{input type="email" class="form-control" placeholder="Email" value=email}}
      </label>
    </div>

    {{#if errorMessage}}
      <div class="alert alert-danger margin-t20" role="alert">{{errorMessage}}</div>
    {{/if}}

    <button type="submit" class="btn btn-default">Reset Password</button>
  </form>

  {{#if done}}
    <div class="alert alert-info margin-t20" role="alert">Thank you! Weâ€™ve sent you an email with instructions for resetting your password. </div>
  {{/if}}

  <div class="margin-t20">
    {{#link-to "authentication"}}
      Login
    {{/link-to}}
  </div>

</div>
