<div class="admin container">
  <h1>Rules Administration</h1>

  <div class="row">
    <div class="col-md-6">
      <form class="form-inline">
        <div class="form-group">
          <label class="control-label">
            Rules for
            {{#x-select value=ruleType class="form-control"}}
              {{#each ruleTypes as |type|}}
                {{#x-option value=type}}{{type}}{{/x-option}}
              {{/each}}
            {{/x-select}}
          </label>
        </div>
      </form>
    </div>
    <div class="col-md-6">
      <form class="form-inline">
        <div class="form-group">
          <label class="control-label">
            Search for
            {{input class="form-control"}}
          </label>
          or
          <button class="btn btn-default" type="button">Create</button>
        </div>
      </form>
    </div>
  </div>





</div>
