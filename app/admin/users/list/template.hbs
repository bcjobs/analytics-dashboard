<div class="page-header">
  <h1>Users</h1>
</div>

{{#if session.isAdmin}}
  <div class="search-form">
    {{#link-to "admin.users.new" class="btn btn-default"}}
      Create
    {{/link-to}}
  </div>
{{/if}}

{{#if model.length}}
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Email
        </th>
        {{#if session.isAdmin}}
          <th>
            Action
          </th>
        {{/if}}
      </tr>
    </thead>
    <tbody>
      {{#each model as |user|}}
        <tr>
          <td>
            {{user.firstName}} {{user.lastName}}
          </td>
          <td>
            {{user.email}}
          </td>
          {{#if session.isAdmin}}
            <td class="text-nowrap">
              {{#link-to "admin.users.edit" user class="btn btn-primary btn-xs"}}Edit{{/link-to}}
              <button type="button" class="btn btn-danger btn-xs" {{action "deleteDialog" user}}>Delete</button>
            </td>
          {{/if}}
        </tr>
      {{/each}}
    </tbody>
  </table>


{{else}}
  No results.
{{/if}}
{{#modal-dialog size="md"}}
    <form {{action "confirmDelete" on="submit"}}>
        <div class="modal-header">
            <h4 class="modal-title text-uppercase" id="myModalLabel">
              Delete User
            </h4>
        </div>
        <div class="modal-body clearfix">
            <p><strong>Are you sure you want to delete this user?</strong></p>

            <p>
                Deleting this user is not reversible.
            </p>

            <div class="text-center">
                <button type="submit" class="btn btn-danger">Delete User</button>
                <button type="button" data-dismiss="modal" aria-label="Cancel" class="btn btn-default">Cancel</button>
            </div>
        </div>
    </form>
{{/modal-dialog}}
